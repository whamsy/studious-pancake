extends layout


block content
    .row
        .col-md-4
            .row
                .col-md-12
                    center
                        img.img-circle.img-responsive(src= pic width="70" height="70")
                        br
                        br
            .review-block-name
                center
                    | Rating : #{rating}


        .col-md-8
            .row
                .col-md-8
                    h4 Welcome to #{name}'s profile page!
                    //h1 YOU BOTH ARE ROOMIES : #{roomies}
                .col-md-4
                    p
                        strong Age:
                        |  #{age}
            p
                strong About:
                |  #{about}
            p
                strong Preferences:
                br
                |  Cleanliness : #{cleanliness}
                br
                |  Smoking : #{smoking}
                br
                |  Drinking : #{drinking}
                br
                |  Party : #{party}

    .row
        br
        br
        if(numreviews == 0)
            h4 No Reviews for #{name} Yet
            if(roomies)
                form(action='/addreview', method='GET')
                    input#userreviewed(type='hidden' name='userreviewed' value = userid)
                    button.btn.btn-primary(type='submit') Add a Review!
