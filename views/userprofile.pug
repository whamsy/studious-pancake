        else
            h4 Reviews for #{name}:
            br
            -var n = 0
            while n < numreviews
                .row
                    .col-md-3
                        h4 Review by : #{reviews[n].reviewer}
                    .col-md-3
                        h5 #{reviews[n].reviewtext}
                    .col-md-3
                        h4 Sentiment : #{reviews[n].sentiment}
                    .col-md-3
                        h4 Rating: #{reviews[n++].rating}
            if(roomies)
                form(action='/addreview', method='GET')
                    input#userreviewed(type='hidden' name='userreviewed' value = userid)
                    button.btn.btn-primary(type='submit') Add a Review!
