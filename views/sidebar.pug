
html
    head
        style.
            body {
                font-family: "Lato", sans-serif;
                transition: background-color .5s;

            }
            .sidenav {
                height: 100%;
                width: 0;
                position: fixed;
                z-index: 1;
                background-color: #111;
                overflow-x: hidden;
                transition: 0.5s;
                padding-top: 100px;

            }
            .sidenav a {
                padding: 8px 40px 8px 32px;
                text-decoration: none;
                font-size: 25px;
                color: #818181;
                display: block;
                transition: 0.3s;


            }
            .sidenav a:hover, .offcanvas a:focus{
                color: #f1f1f1;
            }
            .sidenav .closebtn {
                position: absolute;
                top: 85px;
                right: 0px;
                font-size: 36px;
                margin-left: 20px;


            }
            #main {
                transition: margin-left .5s;
                padding-top: 8rem;



            }
            @media screen and (max-height: 400px) {
                .sidenav {padding-right: 25px;}
                .sidenav a {font-size: 30px;}
            }
