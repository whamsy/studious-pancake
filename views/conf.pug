extends layout

block content
    .col-md-6.col-md-offset-3
        h4.display-4.m-b-2 Please Enter your 6-digit confirmation code
        form(method='POST' action='/conf')
            div.form-group
                label(for='confcode') Confirmation Code
                input.form-control(type='text' id='confcode' placeholder='confcode' name='confcode')
            button.btn.btn-primary(type='submit') Confirm
