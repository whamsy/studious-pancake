.col-md-6.col-md-offset-3
    .container2
        link(rel='stylesheet', type='text/css', href='stylesheets/style2.css')
        p
            label(for='new-task') Add Item
            input#new-task(type='text')
            button Add

        h3 Todo

        ul#incomplete-tasks
            li
                input(type='checkbox')
                label Pay Bills
                input(type='text')
                button.edit Edit
                button.delete Delete
            li
                input(type='checkbox')
                label Go Shopping
                input(type='text')
                button.edit Edit
                button.delete Delete
        h3 Completed
        ul#completed-tasks
            li
                input(type='checkbox', checked='')
                label See the Doctor
                input(type='text')
                button.edit Edit
                button.delete Delete
script(type='text/javascript', src='stylesheets/main.js')


