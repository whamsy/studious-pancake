extends layout


block content
    .col-md-6.col-md-offset-3
        form(method='POST' action='/addtask')
            div.form-group
                label(for='taskname') Task Name:
                input#taskname.form-control(type='text', placeholder='what is the task about?' name='taskname')
                input#roomid.form-control(type='hidden', name='roomid', value = roomID)
            div.form-group
                label(for='startdate') Start Date:
                input#startdate.form-control(type='date', placeholder='' name='startdate')
            div.form-group
                label(for='enddate') End Date:
                input#enddate.form-control(type='date', placeholder='' name='enddate')
            div.form-group
                label Frequency:
                br
                select#freq
                    option(value='1') Everyday
                    option(value='7') Weekly
                    option(value='14') Bi-Weekly
                    option(value='15') Fortnightly
                    option(value='30') Monthly
            button.btn.btn-primary(type='submit') Submit

