extends layout


block content
    .row
        .col-md-4
            .row
                .col-md-12
                    center
                        img.img-circle.img-responsive(src= pic width="70" height="70")
                        br
                        br
            .row
                .col-md-12
                    center
                        button.btn(type='button', data-toggle='collapse', data-target='#demox2')
                            i.fa.fa-pencil
                            |  Â Change Pic!
                        #demox2.collapse
                            br
                            form(action='/uploaddp', method='POST', enctype='multipart/form-data')
                                //input(type='hidden', name='MAX_FILE_SIZE', value='2000000')
                                input#dp(name='dp', type='file')
                                br
                                button#uploaddp.btn.btn-warning.btn-sm(type='submit', name='uploaddp') Submit
            .review-block-name
                center
                    | Rating : #{rating}


        .col-md-8
            .row
                .col-md-8
                    h4 Hi, #{name}!
                .col-md-4
                    p
                        strong Age:
                        |  #{age}
            p
                strong About:
                |  #{about}
            p
                strong Preferences:
                br
                |  Cleanliness : #{cleanliness}
                br
                |  Smoking : #{smoking}
                br
                |  Drinking : #{drinking}
                br
                |  Party : #{party}

    .row
        br
        br
        if(numreviews==0)
            h4 No reviews for you yet!
        else
            h4 Reviews for #{name}:
            br
            -var n = 0
                while n<numreviews
                    .row
                        .col-md-3
                            h4 Review by : #{reviews[n].reviewer}
                        .col-md-3
                            h5 #{reviews[n].reviewtext}
                        .col-md-3
                            h4 Sentiment : #{reviews[n].sentiment}
                        .col-md-3
                            h4 Rating: #{reviews[n++].rating}
