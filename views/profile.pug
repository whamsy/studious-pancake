extends layout


block content
    .row
        .col-md-4
            img.img-circle.img-responsive(src='http://cdn2.business2community.com/wp-content/uploads/2014/04/profile-picture-300x300.jpg' width="70" height="70")
            .review-block-name
                | Rating : #{rating}


        .col-md-8
            .row
                .col-md-8
                    h4 Hi, #{name}!
                .col-md-4
                    p
                        strong Age:
                        |  24
            p
                strong About:
                |  Web Designer / UI.
            p
                strong Preferences:
                br
                |  Cleanliness : #{cleanliness}
                br
                |  Smoking : #{smoking}
                br
                |  Drinking : #{drinking}
                br
                |  Party : #{party}

    .row
        br
        br
        h4 Reviews for #{name}:
